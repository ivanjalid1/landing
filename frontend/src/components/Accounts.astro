---
const accounts = [
  {
    title: "Facebook Ads",
    description: "Cuentas Business Manager verificadas con límites elevados y acceso completo a todas las funciones.",
    features: [
      "Business Manager Verificado",
      "Límite $20k/día",
      "Soporte 24/7 Premium",
      "Garantía 30 días",
      "Pixel Incluido",
      "Acceso a Audiencias"
    ],
    price: "299",
    popular: true,
    icon: `<svg class='w-10 h-10 text-blue-500' fill='currentColor' viewBox='0 0 24 24'><path d='M22 12c0-5.522-4.477-10-10-10S2 6.478 2 12c0 4.991 3.657 9.128 8.438 9.877v-6.987h-2.54v-2.89h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.261c-1.243 0-1.632.771-1.632 1.562v1.875h2.773l-.443 2.89h-2.33v6.987C18.343 21.128 22 16.991 22 12z'/></svg>`,
    savings: "20%"
  },
  {
    title: "Instagram Ads",
    description: "Cuentas publicitarias verificadas optimizadas para campañas en Instagram y Facebook.",
    features: [
      "Cuenta Business Verificada",
      "Límite $15k/día",
      "Soporte 24/7",
      "Garantía 30 días",
      "Shopping Habilitado",
      "Catalogs Incluidos"
    ],
    price: "249",
    popular: false,
    icon: `<svg class='w-10 h-10 text-pink-500' fill='currentColor' viewBox='0 0 24 24'><path d='M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm4.25 2.75a5.75 5.75 0 1 1 0 11.5a5.75 5.75 0 0 1 0-11.5zm0 1.5a4.25 4.25 0 1 0 0 8.5a4.25 4.25 0 0 0 0-8.5zm6.25 1.25a1.25 1.25 0 1 1-2.5 0a1.25 1.25 0 0 1 2.5 0z'/></svg>`,
    savings: "15%"
  },
  {
    title: "TikTok Ads",
    description: "Cuentas publicitarias verificadas para TikTok con acceso a todas las funciones de la plataforma.",
    features: [
      "Cuenta Ads Verificada",
      "Límite $10k/día",
      "Soporte 24/7",
      "Garantía 30 días",
      "Spark Ads Habilitado",
      "Creative Center"
    ],
    price: "199",
    popular: false,
    icon: `<svg class='w-10 h-10 text-cyan-400' fill='currentColor' viewBox='0 0 24 24'><path d='M12 2a10 10 0 1 0 10 10A10.011 10.011 0 0 0 12 2zm2.5 14.5a2.5 2.5 0 1 1-2.5-2.5a2.5 2.5 0 0 1 2.5 2.5zm3.5-7.5a1 1 0 1 1-1-1a1 1 0 0 1 1 1z'/></svg>`,
    savings: "10%"
  }
];
---

<section class="relative py-24 overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-slate-50" id="accounts">
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/4 w-72 h-72 bg-pink-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-cyan-400/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-blue-500/5 rounded-full blur-2xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20 animate-fade-in">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/80 backdrop-blur-sm border border-slate-200 mb-6">
        <span class="w-2 h-2 bg-gradient-to-r from-pink-400 to-cyan-400 rounded-full mr-2 animate-pulse"></span>
        <span class="text-slate-700 text-sm font-medium">Cuentas Premium</span>
      </div>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-800 mb-6 leading-tight">
        Elige tu <span class="bg-gradient-to-r from-pink-500 to-cyan-500 bg-clip-text text-transparent">Cuenta Ideal</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Accede a cuentas verificadas, listas para escalar y con soporte premium 24/7
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-10">
      {accounts.map((account, index) => (
        <div class={`relative group rounded-3xl p-10 shadow-xl border border-slate-200 bg-white/80 backdrop-blur-xl transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl animate-fade-in-up ${account.popular ? 'ring-4 ring-pink-400/40 scale-105 z-10' : ''}`} style={`animation-delay: ${index * 0.2}s`}>
          {/* Badge Popular */}
          {account.popular && (
            <div class="absolute -top-6 left-1/2 -translate-x-1/2">
              <span class="inline-flex items-center px-5 py-2 rounded-full bg-gradient-to-r from-pink-500 to-cyan-500 text-white font-semibold shadow-lg animate-pulse">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 01.894.553l2.382 4.825 5.327.774a1 1 0 01.554 1.707l-3.852 3.755.91 5.307a1 1 0 01-1.451 1.054L10 17.347l-4.764 2.5a1 1 0 01-1.451-1.054l.91-5.307-3.852-3.755a1 1 0 01.554-1.707l5.327-.774L9.106 2.553A1 1 0 0110 2z"/></svg>
                Más Popular
              </span>
            </div>
          )}

          {/* Icono */}
          <div class="flex justify-center mb-6">
            <span class="inline-flex items-center justify-center rounded-full bg-white/80 p-5 shadow-lg group-hover:scale-110 transition-transform duration-300">
              <Fragment set:html={account.icon} />
            </span>
          </div>

          {/* Título y descripción */}
          <h3 class="text-2xl font-bold text-slate-800 text-center mb-2 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-pink-500 group-hover:to-cyan-500 group-hover:bg-clip-text transition-all duration-300">
            {account.title}
          </h3>
          <p class="text-slate-600 text-center mb-6">
            {account.description}
          </p>

          {/* Precio */}
          <div class="text-center mb-8">
            <span class="text-4xl font-extrabold text-slate-800">{account.price}</span>
            <span class="ml-2 text-slate-500">USD</span>
            {account.savings && (
              <span class="ml-3 inline-block px-3 py-1 rounded-full bg-gradient-to-r from-pink-500 to-cyan-500 text-white text-xs font-semibold shadow animate-pulse">
                Ahorra {account.savings}
              </span>
            )}
          </div>

          {/* Features */}
          <ul class="space-y-3 mb-8">
            {account.features.map((feature) => (
              <li class="flex items-center text-slate-700 hover:text-slate-900 transition-colors duration-200">
                <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-gradient-to-r from-pink-500 to-cyan-500 mr-3 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </span>
                <span class="text-sm">{feature}</span>
              </li>
            ))}
          </ul>

          {/* CTA */}
          <a
            href="#contact"
            class={`w-full inline-block text-center px-8 py-3 rounded-xl font-bold shadow-lg transition-all duration-300 hover:scale-105 ${account.popular ? 'bg-gradient-to-r from-pink-500 to-cyan-500 text-white hover:from-pink-600 hover:to-cyan-600' : 'bg-white text-slate-700 hover:bg-slate-50 border border-slate-200'}`}
          >
            Obtener Ahora
          </a>
        </div>
      ))}
    </div>

    <div class="mt-20 text-center animate-fade-in" style="animation-delay: 0.8s">
      <p class="text-slate-500">
        ¿Necesitas una solución personalizada?
        <a href="#contact" class="text-gradient-to-r from-pink-500 to-cyan-500 bg-clip-text text-transparent font-medium ml-1 hover:opacity-80">
          Contáctanos
        </a>
      </p>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
  }
</style> 