---

<section class="relative py-24 overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-slate-50" id="solutions">
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/4 w-72 h-72 bg-purple-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-blue-500/5 rounded-full blur-2xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="text-center mb-20 animate-fade-in">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/80 backdrop-blur-sm border border-slate-200 mb-6">
        <span class="w-2 h-2 bg-gradient-to-r from-purple-400 to-emerald-400 rounded-full mr-2 animate-pulse"></span>
        <span class="text-slate-700 text-sm font-medium">Soluciones Enterprise</span>
      </div>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-800 mb-6 leading-tight">
        Tecnología <span class="bg-gradient-to-r from-purple-500 to-emerald-500 bg-clip-text text-transparent">Enterprise</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Infraestructura de nivel empresarial para agencias y profesionales que necesitan escalar sin límites
      </p>
    </div>

    <!-- Solutions Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {solutions.map((solution, index) => (
        <div class="group relative animate-fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
          {/* Card Background */}
          <div class="absolute inset-0 bg-white/80 rounded-3xl border border-slate-200 backdrop-blur-xl shadow-lg group-hover:shadow-xl transition-shadow duration-300"></div>
          
          {/* Card Content */}
          <div class="relative p-8 h-full">
            {/* Icon */}
            <div class={`inline-flex p-4 rounded-2xl bg-gradient-to-br ${solution.color} mb-6 group-hover:scale-110 transition-transform duration-300`}>
              <Fragment set:html={solution.icon} />
            </div>
            
            {/* Title & Description */}
            <h3 class="text-2xl font-bold text-slate-800 mb-4 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-purple-600 group-hover:to-emerald-600 group-hover:bg-clip-text transition-all duration-300">
              {solution.title}
            </h3>
            
            <p class="text-slate-600 mb-8 leading-relaxed">
              {solution.description}
            </p>

            {/* Features */}
            <div class="space-y-4 mb-8">
              {solution.features.map((feature) => (
                <div class="flex items-start text-slate-700 hover:text-slate-900 transition-colors duration-200">
                  <div class="flex-shrink-0 w-5 h-5 rounded-full bg-gradient-to-r from-purple-500 to-emerald-500 flex items-center justify-center mr-3 mt-0.5">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <span class="text-sm">{feature}</span>
                </div>
              ))}
            </div>

            {/* Specs */}
            <div class="flex items-center justify-between pt-6 border-t border-slate-200">
              <div>
                <span class="text-slate-500 text-sm">{solution.specs.label}</span>
                <div class="flex items-center">
                  <span class="text-2xl font-bold text-slate-800 mr-2">{solution.specs.value}</span>
                  <span class="text-emerald-600 text-sm font-medium">{solution.specs.detail}</span>
                </div>
              </div>
              <div class="w-12 h-12 rounded-full bg-gradient-to-r from-purple-500/20 to-emerald-500/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
            </div>

            {/* Hover Effects */}
            <div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-emerald-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute -inset-1 bg-gradient-to-br from-purple-500/10 to-emerald-500/10 rounded-3xl blur opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Enterprise Stats -->
    <div class="mt-20 grid md:grid-cols-4 gap-8 animate-fade-in" style="animation-delay: 0.6s">
      <div class="text-center">
        <div class="text-4xl font-bold text-slate-800 mb-2">99.9%</div>
        <div class="text-slate-600">Uptime SLA</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-slate-800 mb-2">50+</div>
        <div class="text-slate-600">Enterprise Clients</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-slate-800 mb-2">1M+</div>
        <div class="text-slate-600">API Calls/Day</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-slate-800 mb-2">SOC 2</div>
        <div class="text-slate-600">Compliance</div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="mt-20 text-center animate-fade-in" style="animation-delay: 0.8s">
      <div class="inline-flex items-center space-x-4">
        <a
          href="#contact"
          class="group relative inline-flex items-center px-8 py-4 rounded-2xl bg-gradient-to-r from-purple-500 to-emerald-500 text-white font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300"
        >
          <span class="relative z-10">Solicitar Demo Enterprise</span>
          <svg class="w-5 h-5 ml-2 relative z-10 transform group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-emerald-600 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
        
        <div class="flex items-center space-x-2 text-slate-500">
          <div class="flex -space-x-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-r from-purple-500 to-emerald-500 border-2 border-white"></div>
            <div class="w-8 h-8 rounded-full bg-gradient-to-r from-blue-500 to-cyan-500 border-2 border-white"></div>
            <div class="w-8 h-8 rounded-full bg-gradient-to-r from-pink-500 to-cyan-500 border-2 border-white"></div>
          </div>
          <span class="text-sm">Soporte técnico 24/7</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
  }
</style> 