<script>
  // Animación de números
  function animateValue(element, start, end, duration = 2000) {
    if (!element) return;
    
    let startTimestamp = null;
    const step = (timestamp) => {
      if (!startTimestamp) startTimestamp = timestamp;
      const progress = Math.min((timestamp - startTimestamp) / duration, 1);
      
      const easeOutQuart = 1 - Math.pow(1 - progress, 4);
      const current = progress === 1 ? end : (start + (end - start) * easeOutQuart);
      
      element.textContent = current.toFixed(0) + (element.dataset.value.includes('%') ? '%' : '+');
      
      if (progress < 1) {
        window.requestAnimationFrame(step);
      }
    };
    
    window.requestAnimationFrame(step);
  }

  // Inicializar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    // Animar números
    document.querySelectorAll('.stat-item div[data-value]').forEach(el => {
      const value = parseFloat(el.dataset.value);
      animateValue(el, 0, value);
    });
  });
</script> 