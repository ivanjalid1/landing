---
import AdminLayout from '../../layouts/AdminLayout.astro';
import ContentEditor from '../../components/admin/ContentEditor.jsx';
---

<AdminLayout title="Editar Footer">
  <ContentEditor 
    client:load
    section="footer"
    title="Editar Footer"
    description="Modifica la información de contacto y enlaces del footer"
    fields={[
      {
        name: 'companyName',
        label: 'Nombre de la Empresa',
        type: 'text',
        placeholder: 'Ej: Top Ads Agency',
        required: true
      },
      {
        name: 'description',
        label: 'Descripción de la Empresa',
        type: 'textarea',
        placeholder: 'Breve descripción de la empresa...',
        rows: 3,
        required: true
      },
      {
        name: 'contact',
        label: 'Información de Contacto',
        type: 'array',
        itemLabel: 'Contacto',
        template: {
          type: '',
          value: '',
          icon: 'fas fa-envelope'
        },
        fields: [
          {
            name: 'type',
            label: 'Tipo',
            type: 'text',
            placeholder: 'Ej: Email, Teléfono, WhatsApp'
          },
          {
            name: 'value',
            label: 'Valor',
            type: 'text',
            placeholder: 'Ej: info@topads.com'
          },
          {
            name: 'icon',
            label: 'Icono (FontAwesome)',
            type: 'text',
            placeholder: 'Ej: fas fa-envelope'
          }
        ]
      },
      {
        name: 'social',
        label: 'Redes Sociales',
        type: 'array',
        itemLabel: 'Red Social',
        template: {
          name: '',
          url: '',
          icon: 'fab fa-facebook'
        },
        fields: [
          {
            name: 'name',
            label: 'Nombre',
            type: 'text',
            placeholder: 'Ej: Facebook, Instagram, Twitter'
          },
          {
            name: 'url',
            label: 'URL',
            type: 'text',
            placeholder: 'Ej: https://facebook.com/topads, #contact, o /servicios'
          },
          {
            name: 'icon',
            label: 'Icono (FontAwesome)',
            type: 'text',
            placeholder: 'Ej: fab fa-facebook'
          }
        ]
      },
      {
        name: 'links',
        label: 'Enlaces Rápidos',
        type: 'array',
        itemLabel: 'Enlace',
        template: {
          text: '',
          url: ''
        },
        fields: [
          {
            name: 'text',
            label: 'Texto',
            type: 'text',
            placeholder: 'Ej: Servicios, FAQ, Contacto'
          },
          {
            name: 'url',
            label: 'URL',
            type: 'text',
            placeholder: 'Ej: #services, #faq, /contact, o https://...'
          }
        ]
      },
      {
        name: 'copyright',
        label: 'Texto de Copyright',
        type: 'text',
        placeholder: 'Ej: © 2024 Top Ads Agency. Todos los derechos reservados.',
        required: true
      }
    ]}
  />
</AdminLayout> 