---
import AdminLayout from '../../layouts/AdminLayout.astro';
import ContentEditor from '../../components/admin/ContentEditor.jsx';
---

<AdminLayout title="Editar Servicios">
  <ContentEditor 
    client:load
    section="services"
    title="Editar Sección Servicios"
    description="Modifica la lista de servicios ofrecidos por tu agencia"
    fields={[
      {
        name: 'title',
        label: 'Título de la Sección',
        type: 'text',
        placeholder: 'Ej: Nuestros Servicios',
        required: true
      },
      {
        name: 'subtitle',
        label: 'Subtítulo',
        type: 'textarea',
        placeholder: 'Descripción general de los servicios...',
        rows: 3,
        required: true
      },
      {
        name: 'services',
        label: 'Lista de Servicios',
        type: 'array',
        itemLabel: 'Servicio',
        template: {
          title: '',
          description: '',
          icon: 'fas fa-cog',
          features: []
        },
        fields: [
          {
            name: 'title',
            label: 'Título del Servicio',
            type: 'text',
            placeholder: 'Ej: Gestión de Anuncios'
          },
          {
            name: 'description',
            label: 'Descripción',
            type: 'textarea',
            placeholder: 'Descripción detallada del servicio...',
            rows: 3
          },
          {
            name: 'icon',
            label: 'Icono (FontAwesome)',
            type: 'text',
            placeholder: 'Ej: fas fa-ad'
          },
          {
            name: 'price',
            label: 'Precio',
            type: 'text',
            placeholder: 'Ej: Desde $99/mes'
          },
          {
            name: 'features',
            label: 'Características',
            type: 'array',
            itemLabel: 'Característica',
            template: '',
            fields: [
              {
                name: 'text',
                label: 'Texto',
                type: 'text',
                placeholder: 'Ej: Optimización automática'
              }
            ]
          }
        ]
      }
    ]}
  />
</AdminLayout> 