---
import AdminLayout from '../../layouts/AdminLayout.astro';
import ContentEditor from '../../components/admin/ContentEditor.jsx';
---

<AdminLayout title="Editar FAQ">
  <ContentEditor 
    client:load
    section="faq"
    title="Editar Preguntas Frecuentes"
    description="Modifica las preguntas y respuestas de la sección FAQ"
    fields={[
      {
        name: 'title',
        label: 'Título de la Sección',
        type: 'text',
        placeholder: 'Ej: Preguntas Frecuentes',
        required: true
      },
      {
        name: 'subtitle',
        label: 'Subtítulo',
        type: 'textarea',
        placeholder: 'Descripción de la sección FAQ...',
        rows: 3,
        required: true
      },
      {
        name: 'questions',
        label: 'Preguntas y Respuestas',
        type: 'array',
        itemLabel: 'Pregunta',
        template: {
          question: '',
          answer: '',
          category: 'general'
        },
        fields: [
          {
            name: 'question',
            label: 'Pregunta',
            type: 'text',
            placeholder: 'Ej: ¿Cómo funciona el servicio?'
          },
          {
            name: 'answer',
            label: 'Respuesta',
            type: 'textarea',
            placeholder: 'Respuesta detallada...',
            rows: 4
          },
          {
            name: 'category',
            label: 'Categoría',
            type: 'text',
            placeholder: 'Ej: general, precios, soporte'
          }
        ]
      }
    ]}
  />
</AdminLayout> 