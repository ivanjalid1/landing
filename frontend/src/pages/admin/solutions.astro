---
import AdminLayout from '../../layouts/AdminLayout.astro';
import ContentEditor from '../../components/admin/ContentEditor.jsx';
---

<AdminLayout title="Editar Soluciones Enterprise">
  <ContentEditor 
    client:load
    section="solutions"
    title="Editar Soluciones Enterprise"
    description="Modifica las soluciones técnicas para empresas"
    fields={[
      {
        name: 'title',
        label: 'Título de la Sección',
        type: 'text',
        placeholder: 'Ej: Soluciones Enterprise',
        required: true
      },
      {
        name: 'subtitle',
        label: 'Subtítulo',
        type: 'textarea',
        placeholder: 'Descripción de las soluciones enterprise...',
        rows: 3,
        required: true
      },
      {
        name: 'solutions',
        label: 'Lista de Soluciones',
        type: 'array',
        itemLabel: 'Solución',
        template: {
          title: '',
          description: '',
          icon: 'fas fa-building',
          benefits: [],
          buttonText: 'Solicitar Demo',
          buttonLink: '#contact'
        },
        fields: [
          {
            name: 'title',
            label: 'Título de la Solución',
            type: 'text',
            placeholder: 'Ej: Gestión de Campañas'
          },
          {
            name: 'description',
            label: 'Descripción',
            type: 'textarea',
            placeholder: 'Descripción detallada de la solución...',
            rows: 4
          },
          {
            name: 'icon',
            label: 'Icono (FontAwesome)',
            type: 'text',
            placeholder: 'Ej: fas fa-chart-line'
          },
          {
            name: 'buttonText',
            label: 'Texto del Botón',
            type: 'text',
            placeholder: 'Ej: Solicitar Demo'
          },
          {
            name: 'buttonLink',
            label: 'Enlace del Botón',
            type: 'text',
            placeholder: 'Ej: #contact, #servicios, https://t.me/..., o /demo'
          },
          {
            name: 'benefits',
            label: 'Beneficios',
            type: 'array',
            itemLabel: 'Beneficio',
            template: '',
            fields: [
              {
                name: 'text',
                label: 'Texto',
                type: 'text',
                placeholder: 'Ej: Aumento del 300% en ROI'
              }
            ]
          }
        ]
      }
    ]}
  />
</AdminLayout> 